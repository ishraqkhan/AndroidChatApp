<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.ishraq.androidchatapp.ChatDialogsActivity"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/chat_dialog_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:titleTextColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.Toolbar>

    <ListView
        android:layout_below="@+id/chat_dialog_toolbar"
        android:id="@+id/list_chat_dialogs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></ListView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/chatdialog_add_user"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        app:backgroundTint="@color/colorPrimaryDark"
        android:src="@drawable/ic_add"
        />

</RelativeLayout>
